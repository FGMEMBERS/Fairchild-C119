<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <sim include="Nasal/views.xml">
 
    <author>BARANGER Emmanuel (3D)</author>
    <aircraft-version>0.1</aircraft-version>
    <status>Alpha</status>
   
    <fuel-fraction>0.8</fuel-fraction>
  
    <startup>
      <splash-texture>Aircraft/Fairchild-C119/c119-splash.png</splash-texture>
    </startup>

    <model>
      <path>Aircraft/Fairchild-C119/Models/c119.xml</path>
    </model>

    <sound>
      <path>Aircraft/Fairchild-C119/Sounds/c119-sound.xml</path>
    </sound>

    <multiplay>
      <chat_display>1</chat_display>
      <generic>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <int type="int">0</int>
        <float n="0" alias="/instrumentation/doors/crew/position-norm"/>
        <float n="1" alias="/instrumentation/doors/passenger/position-norm"/>
      </generic>
    </multiplay>

    <flaps>
      <setting>0.000</setting>
      <setting>0.25</setting>
      <setting>0.50</setting>
      <setting>0.75</setting>
      <setting>1.000</setting>
    </flaps>

  </sim>

  <controls>
    <engines>
      <engine n="0">
        <magnetos>0</magnetos>
      </engine>
      <engine n="1">
        <magnetos>0</magnetos>
      </engine>
    </engines>
  </controls>

  <engines>
    <engine n="0">
      <engine-num type="int">0</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
    <engine n="1">
      <engine-num type="int">1</engine-num>
      <rpm>500</rpm>
      <running>false</running>
    </engine>
  </engines>

  <input>
    <keyboard include="Nasal/c119-keyboard.xml"/>
  </input>
 
  <nasal>
    <doors>
      <file>Aircraft/Fairchild-C119/Nasal/doors.nas</file>
    </doors>
    <c119>
      <file>Aircraft/Fairchild-C119/Nasal/liveries.nas</file>
      <file>Aircraft/Fairchild-C119/Nasal/light.nas</file>
    </c119>
  </nasal>

</PropertyList>

